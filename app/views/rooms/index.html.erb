<section class="w-100 text-center mt-5">
 <div class="container mt-5">
  <h1 class="mb-4">Rooms</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">UUID</th>
        <th scope="col">Status</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @rooms.each_with_index do |room, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= room.name %></td>
          <td><%= room.uuid %></td>
          <td><%= room.status_human %></td>
          <td>
            <%= link_to 'Entrer', room_path(room), class: "btn btn-primary btn-sm" %>
            <%= link_to 'Supprimer', room_path(room), data: { turbo_method: :delete, turbo_confirm: "Etes vous sure?" }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div> 
</section>
