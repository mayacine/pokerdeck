<div class="row" data-controller="clipboardurl">
  <div class="col-12">
    <h4 class="pl-2 border-top"> Inviter les collaborateurs</h4>
  </div>
  <span class="col-6 text-truncate " data-clipboardurl-target="source" data-clipboard-text="<%= content_str %>">
    <span class=""> <%= content_str %> </span>
  </span>
  <button class="col-4 btn btn-outline-secondary text-primary" data-action="clipboardurl#copy" title="Copy to clipboard">
    Copier
  </button>
  <span data-clipboardurl-target="copiedIndicator" class="col hidden text-green-700 font-semibold">
    <i class="text-primary bi bi-check-circle-fill"></i>
  </span>
</div>
